{
    "name": "hidden-heaven",
    "version": "0.0.1",
    "type": "module",
    "module": "dist/index.ts",
    "main": "dist/index.cjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.cjs",
            "import": "./dist/index.mjs"
        }
    },
    "files": [
        "dist",
        "package.json"
    ],
    "bin": {
        "hidden-heaven": "dist/index.cli.cjs"
    },
    "scripts": {
        "build": "tsup-node --dts",
        "--DEV--": "",
        "dev": "npm run build -- --watch",
        "dev:types": "tsc --watch",
        "--TEST--": "",
        "test": "vitest",
        "test:types": "tsc --noEmit",
        "test:fixture:basic": "(cd src.test/fixtures/fixture.basic && npm run test)",
        "test:fixture:named": "(cd src.test/fixtures/fixture.named && npm run test)",
        "test:fixture:config": "(cd src.test/fixtures/fixture.config && npm run test)",
        "test:fixture:init": "(cd src.test/fixtures/fixture.init && npm run test)",
        "--DEPLOY--": "",
        "deploy": "npm run build && npm run test:types && npm publish"
    },
    "tsup": {
        "entry": [
            "src/index.ts",
            "src/index.cli.ts"
        ],
        "splitting": false,
        "sourcemap": true,
        "clean": true,
        "format": [
            "esm",
            "cjs"
        ]
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/minimist": "^1.2.5",
        "prettier": "^3.4.2",
        "tsup": "^8.3.5",
        "typescript": "^5.0.0",
        "vitest": "^3.0.2"
    },
    "dependencies": {
        "fast-glob": "*",
        "fs-extra": "*",
        "minimist": "^1.2.8",
        "zod": "*"
    }
}
