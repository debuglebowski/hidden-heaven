{
    "name": "hidden-hell",
    "version": "0.0.4",
    "type": "module",
    "module": "dist/index.ts",
    "main": "dist/index.cjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.cjs",
            "import": "./dist/index.mjs"
        }
    },
    "files": [
        "dist",
        "package.json"
    ],
    "bin": {
        "hide": "dist/index.cli.cjs",
        "hidden-hell": "dist/index.cli.cjs"
    },
    "scripts": {
        "build": "tsup-node --dts",
        "--DEV--": "",
        "dev": "npm run build -- --watch",
        "dev:types": "tsc --watch",
        "--TEST--": "",
        "test": "vitest",
        "test:types": "tsc --noEmit",
        "--DEPLOY--": "",
        "deploy": "bash scripts/deploy.sh",
        "deploy:patch": "bash scripts/deploy.patch.sh"
    },
    "tsup": {
        "entry": [
            "src/index.ts",
            "src/index.cli.ts"
        ],
        "splitting": false,
        "sourcemap": true,
        "clean": true,
        "format": [
            "esm",
            "cjs"
        ]
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/minimist": "^1.2.5",
        "prettier": "^3.4.2",
        "tsup": "^8.3.5",
        "typescript": "^5.0.0",
        "vitest": "^3.0.2"
    },
    "dependencies": {
        "fast-glob": "*",
        "fs-extra": "*",
        "json5": "^2.2.3",
        "minimist": "^1.2.8"
    }
}
